<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="75" prefWidth="75" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:id="root"
           fx:controller="com.example.project.controllers.tiles.UpgradeTileController">
    <ImageView fx:id="imageView"  fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
    </ImageView>
    <Label fx:id="countText"
           StackPane.alignment="BOTTOM_RIGHT"
           style="-fx-background-color: black; -fx-text-fill: white; -fx-padding: 0 4 0 4; -fx-border-radius: 4; -fx-background-radius: 4;"
           visible="false">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
        <StackPane.margin>
            <Insets bottom="2.0" right="4.0" />
        </StackPane.margin>
    </Label>
</StackPane>
