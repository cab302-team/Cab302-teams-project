<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="root"
           fx:controller="com.example.project.controllers.tileViewControllers.LetterTileController"
           prefWidth="80" prefHeight="80"
           minWidth="10" minHeight="10"
           maxWidth="Infinity" maxHeight="Infinity"
           stylesheets="@letter-tile-styles.css">

    <!-- Background rectangle that will resize with the tile -->
    <Rectangle fx:id="theBackground"
               styleClass="letter-tile-background"
               StackPane.alignment="CENTER"/>

    <!-- Main letter -->
    <Label fx:id="letterLabel"
           text="A"
           styleClass="letter-tile-label"
           alignment="CENTER"/>

    <!-- Value (bottom-right corner) -->
    <Label fx:id="valueLabel"
           text="1"
           styleClass="letter-tile-value-label"
           StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets right="3" bottom="2"/>
        </StackPane.margin>
    </Label>
</StackPane>