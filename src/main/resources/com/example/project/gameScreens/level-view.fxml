<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.shape.Rectangle?>
<StackPane fx:id="root" stylesheets="@level-styles.css, @common-styles.css"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.LevelController">

    <!-- Background -->
    <ImageView managed="false"
               mouseTransparent="true"
               StackPane.alignment="CENTER"
               fitWidth="${root.width}"
               fitHeight="${root.height}">
        <Image url="@backgroundImage.png"/>
    </ImageView>

    <BorderPane>
        <top>
            <StackPane>
                <VBox style="-fx-padding: 20 0 0 0;">
                    <HBox fx:id="upgradeTilesContainer" alignment="CENTER" spacing="10" />
                    <StackPane>
                        <Label fx:id="levelWonLostText" styleClass="youWonText" text="YOU WON" textFill="deeppink" />
                    </StackPane>
                </VBox>
            </StackPane>
        </top>

        <left>
            <!--            <StackPane fx:id="sidebar"/>-->
            <StackPane styleClass="left-panel" minWidth="300">
                <VBox spacing="15">

                    <StackPane styleClass="rounded-rectangle">
                        <Label fx:id="moneyLabel"
                               text="Money: $0"
                               styleClass="gold-text"/>
                    </StackPane>

                    <VBox alignment="CENTER" spacing="5" styleClass="rounded-rectangle">
                        <Label text="Score at least" styleClass="small-black-text"/>
                        <BorderPane styleClass="rounded-rectangle-no-boarder" maxWidth="200" maxHeight="10">
                            <center>
                                <Label fx:id="scoreToBeatLabel" styleClass="common-text" alignment="CENTER"/>
                            </center>
                        </BorderPane>
                        <Label text="To earn $$$" styleClass="small-black-text"/>
                    </VBox>

                    <!-- players score stuff -->
                    <VBox alignment="CENTER" spacing="5" styleClass="rounded-rectangle">
                        <Label text="Round score" styleClass="small-black-text"/>
                        <BorderPane styleClass="rounded-rectangle-no-boarder" maxWidth="200" maxHeight="10">
                            <center>
                                <Label fx:id="currentScoreLabel" styleClass="common-text"/>
                            </center>
                        </BorderPane>
                        <!-- to make space down the bottom. -->
                        <Label/>
                    </VBox>

                    <VBox styleClass="rounded-rectangle" alignment="CENTER">
                        <Label/>
                        <HBox alignment="CENTER" spacing="6">
                            <BorderPane styleClass="rounded-rectangle-no-boarder" style="-fx-background-color: #8083e8;" minWidth="80">
                                <center>
                                    <Label fx:id="rawPoints" styleClass="common-text" text="0"/>
                                </center>
                            </BorderPane>
                            <Label styleClass="common-text" text="Ã—"/>
                            <BorderPane styleClass="rounded-rectangle-no-boarder" style="-fx-background-color: #ed5555;" minWidth="80">
                                <center>
                                    <Label fx:id="multiplier" styleClass="common-text" text="0"/>
                                </center>
                            </BorderPane>
                        </HBox>
                        <Label/>
                    </VBox>
                </VBox>
            </StackPane>
        </left>

        <center>
            <StackPane>
                <VBox StackPane.alignment="CENTER" alignment="CENTER" spacing="50">
                    <StackPane>
                        <!-- word window Rack Image -->
                        <ImageView mouseTransparent="true"
                                   preserveRatio="true"
                                   scaleX="0.9"
                                   scaleY="0.9" StackPane.alignment="CENTER">
                            <Image url="@wordWindow.PNG"/>
                        </ImageView>
                        <HBox fx:id="wordViewHBox" alignment="CENTER" fillHeight="false" spacing="11">
                        </HBox>
                    </StackPane>
                    <StackPane StackPane.alignment="CENTER">
                        <!-- Tile Rack Image -->
                        <ImageView mouseTransparent="true"
                                   preserveRatio="true"
                                   scaleX="0.6"
                                   scaleY="0.6">
                            <Image url="@tileRack.png"/>
                        </ImageView>
                        <HBox alignment="CENTER" StackPane.alignment="CENTER" fx:id="tileRackContainer" spacing="10"/>
                    </StackPane>
                    <HBox alignment="CENTER" spacing="50">
                        <!-- Plays container -->
                        <VBox alignment="CENTER" styleClass="control-container">
                            <Label text="Plays" styleClass="small-black-text"/>
                            <HBox alignment="CENTER" spacing="10">
                                <Label fx:id="playsLeftLabel" styleClass="small-black-text" text="0"/>
                                <Button fx:id="playButton" onAction="#onPlayButton"
                                        styleClass="default-button" text="play"/>
                            </HBox>
                        </VBox>

                        <!-- Redraw button -->
                        <VBox alignment="CENTER"  styleClass="control-container">
                            <Label text="Redraws" styleClass="small-black-text"/>
                            <HBox alignment="CENTER" spacing="10">
                                <Label fx:id="redrawsLeftLabel" styleClass="small-black-text" text="0"/>
                                <Button fx:id="redrawButton" onAction="#onRedrawButton"
                                        styleClass="default-button" text="redraw"/>
                            </HBox>
                        </VBox>
                    </HBox>
                    <Button onAction="#onSkipButton" text="(Dev only) Skip to shop" styleClass="default-button"/>
                </VBox>

                <!-- redraw container -->
<!--                <BorderPane mouseTransparent="true" styleClass="redraw-container">-->
<!--                    <right>-->
<!--                        -->
<!--                    </right>-->
<!--                </BorderPane>-->

                <VBox fx:id="redrawContainer" styleClass="redraw-container" StackPane.alignment="CENTER_RIGHT"
                      maxHeight="-Infinity" maxWidth="-Infinity"
                      minHeight="-Infinity" minWidth="-Infinity"
                      spacing="10.0">
                    <StackPane.margin>
                        <Insets bottom="50.0" right="20.0" />
                    </StackPane.margin>
                    <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton" text="Confirm Redraw">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" top="10.0"/>
                        </VBox.margin>
                    </Button>
                    <VBox.margin>
                        <Insets bottom="50"/>
                    </VBox.margin>
                    <!-- things added in code here-->
                </VBox>

            </StackPane>
        </center>
    </BorderPane>
    <!-- definition container -->
    <StackPane fx:id="definitionContainer" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity" styleClass="popup-overlay" translateX="600" StackPane.alignment="CENTER_RIGHT">
        <StackPane.margin>
            <Insets left="-1000.0" />
        </StackPane.margin>
    </StackPane>
</StackPane>