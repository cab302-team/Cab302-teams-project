<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" stylesheets="@level-styles.css, @common-styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controllers.gameScreens.LevelController">

    <!-- Background -->
    <ImageView fitHeight="${root.height}" fitWidth="${root.width}" managed="false" mouseTransparent="true" StackPane.alignment="CENTER">
        <Image url="@backgroundImage.png" />
    </ImageView>

    <!-- word window Rack Image -->
    <ImageView mouseTransparent="true" preserveRatio="true" scaleX="0.9" scaleY="0.9" translateY="-64" StackPane.alignment="CENTER">
        <Image url="@wordWindow.PNG" />
    </ImageView>

    <!-- Tile Rack Image -->
    <ImageView mouseTransparent="true" preserveRatio="true" scaleX="0.6" scaleY="0.6" translateY="54" StackPane.alignment="CENTER">
        <Image url="@tileRack.png" />
    </ImageView>


    <BorderPane prefHeight="400.0" prefWidth="600.0">

        <!-- top of the screen -->
        <top>
            <VBox alignment="TOP_CENTER" style="-fx-padding: 100 0 0 0;">

                <!-- upgrade tiles -->
                <HBox fx:id="upgradeTilesContainer" alignment="CENTER" minHeight="50" spacing="10" />

                <!-- level outcome popup -->
                <StackPane>
                    <Label fx:id="levelWonLostText" styleClass="levelOutcome" prefHeight="150" wrapText="false" >
                    </Label>
                </StackPane>

            </VBox>
        </top>

        <!-- left side of the screen -->
        <left>
            <VBox fx:id="sidebar" alignment="TOP_CENTER" maxHeight="600" spacing="15" styleClass="left-panel" translateY="-120" BorderPane.alignment="CENTER">

                <Label fx:id="moneyLabel" style="-fx-padding: 0 0 0 30; -fx-text-fill: pink;" styleClass="scoreText" text="Money: $0" />

                <!-- High Score block -->
                <VBox alignment="CENTER" spacing="5">
                    <Label styleClass="score-label" text="Requirement" />
                    <HBox spacing="5" style="-fx-padding: 20 0 0 30;">
                        <Label fx:id="scoreToBeatLabel" styleClass="score-value" translateX="-16" />
                    </HBox>
                </VBox>

                <!-- Divider line -->
                <Separator orientation="HORIZONTAL" prefWidth="180" styleClass="score-separator" />

                <!-- Total Score block -->
                <VBox alignment="CENTER" spacing="5" translateY="40">
                    <Label styleClass="score-label" text="Round Score" />
                    <HBox spacing="5" style="-fx-padding: 20 0 0 30;">
                        <Label fx:id="currentScoreLabel" styleClass="total-score-value" translateX="-16" />
                        <!-- TODO: add level score and a word score. when onPlay word score animations pay then word score gets added to the level score -->
                    </HBox>
                </VBox>

                <!-- Word combo block (uses comboCountLabel + comboMultiplierLabel) -->
                <VBox alignment="CENTER" spacing="8">
                    <HBox alignment="CENTER" spacing="6" styleClass="combo-box" translateY="70">
                        <Label fx:id="comboCountLabel" styleClass="combo-bubble-blue" text="0">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label styleClass="combo-x" text="×" />
                        <Label fx:id="comboMultiplierLabel" styleClass="combo-bubble-red" text="0">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </HBox>
                </VBox>

            </VBox>
        </left>

        <!-- center components of the screen -->
        <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <VBox alignment="CENTER" spacing="50">

                    <!-- word window -->
                    <HBox fx:id="wordWindowContainer" alignment="CENTER" fillHeight="false" spacing="10.6" translateX="-145.5" translateY="-39.5">
                    </HBox>

                    <!-- tile rack -->
                    <HBox fx:id="tileRackContainer" alignment="CENTER" fillHeight="false" spacing="15" translateX="-145">
                    </HBox>

                    <!-- container for plays and redraws buttons -->
                    <HBox alignment="CENTER" spacing="50" translateX="-142">

                        <!-- Plays label and button -->
                        <VBox alignment="CENTER" styleClass="control-container">
                            <Label styleClass="control-label" text="Plays" />
                            <HBox alignment="CENTER" spacing="10">
                                <Label fx:id="playsLeftLabel" styleClass="control-number" text="0" />
                                <Button fx:id="playButton" onAction="#onPlayButton" styleClass="circle-button" text="▶" />
                            </HBox>
                        </VBox>

                        <!-- Redraws label and button -->
                        <VBox alignment="CENTER" styleClass="control-container">
                            <Label styleClass="control-label" text="Redraws" />
                            <HBox alignment="CENTER" spacing="10">
                                <Label fx:id="redrawsLeftLabel" styleClass="control-number" text="0" />
                                <Button fx:id="redrawButton" onAction="#onRedrawButton" styleClass="circle-button" text="⟳" />
                            </HBox>
                        </VBox>

                        <!-- margin adjusts buttons height -->
                        <VBox.margin>
                            <Insets top="-10" />
                        </VBox.margin>
                    </HBox>

                    <!-- dev skip to shop button -->
                    <Button onAction="#onSkipButton" text="(Dev only) Skip to shop" translateX="-142">
                        <VBox.margin>
                            <Insets top="-20" />
                        </VBox.margin>
                    </Button>
                </VBox>

                <!-- redraw window -->
                <VBox fx:id="redrawContainer" alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" styleClass="redraw-container" translateX="200.0" StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets bottom="50.0" right="20.0" />
                    </StackPane.margin>
                    <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton" styleClass="menu-buttons" text="Confirm Redraw">
                        <VBox.margin>
                            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                        </VBox.margin>
                    </Button>
               <padding>
                  <Insets bottom="25.0" top="10.0" />
               </padding>
                </VBox>


            </StackPane>
        </center>
    </BorderPane>

    <!-- definition popup -->
    <StackPane fx:id="definitionContainer" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity" styleClass="popup-overlay" translateX="600" StackPane.alignment="CENTER_RIGHT">
        <StackPane.margin>
            <Insets left="-1000.0" />
        </StackPane.margin>
    </StackPane>

</StackPane>
