<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="400"
            fx:controller="com.example.project.controllers.gameScreens.LevelController"
            stylesheets="@level-styles.css">

    <top>
        <VBox>
            <StackPane>
                <Label text="Level 1" styleClass="heading"
                       textAlignment="CENTER" alignment="CENTER"/>
            </StackPane>
            <HBox fx:id="upgradeTileRackAtTop" alignment="CENTER" spacing="10" fillHeight="false">
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="50">
            <HBox fx:id="wordViewHBox" alignment="CENTER" spacing="10" fillHeight="false">
            </HBox>
            <HBox fx:id="tileRackContainer" alignment="CENTER" spacing="10" fillHeight="false">
            </HBox>
            <HBox alignment="CENTER" spacing="50">
                <Button fx:id="playButton" text="play" onAction="#onPlayButton"/>
                <Button fx:id="redrawButton" text="redraw" onAction="#onRedrawButton"/>
            </HBox>
            <Button onAction="#onSkipButton" text="(Dev only) Skip to shop"/>
        </VBox>
    </center>
</BorderPane>
