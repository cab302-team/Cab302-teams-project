<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400" prefWidth="600" stylesheets="@level-styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controllers.gameScreens.LevelController">

    <top>
        <VBox>
            <StackPane>
                <Label alignment="CENTER" styleClass="heading" text="Level 1" textAlignment="CENTER" />
            </StackPane>
            <HBox fx:id="upgradeTileRackAtTop" alignment="CENTER" fillHeight="false" spacing="10">
            </HBox>
        </VBox>
    </top>
   <center>
       <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <VBox alignment="CENTER" spacing="50">
               <HBox fx:id="wordViewHBox" alignment="CENTER" fillHeight="false" spacing="10">
               </HBox>
               <HBox fx:id="tileRackContainer" alignment="CENTER" fillHeight="false" spacing="10">
               </HBox>
               <HBox alignment="CENTER" spacing="50">
                   <Button fx:id="playButton" onAction="#onPlayButton" text="Play"/>
                   <Button fx:id="redrawButton" onAction="#onRedrawButton" text="Redraw"/>
               </HBox>
               <Button onAction="#onSkipButton" text="(Dev only) Skip to shop"/>
           </VBox>
           <VBox fx:id="redrawContainer" alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                 minHeight="-Infinity" minWidth="-Infinity" prefHeight="347.0" prefWidth="150.0" spacing="10.0"
                 translateX="200.0" StackPane.alignment="BOTTOM_RIGHT">
               <StackPane.margin>
                   <Insets bottom="50.0" right="20.0"/>
               </StackPane.margin>
               <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton"
                       text="Confirm Redraw"/>
           </VBox>
       </StackPane>
   </center>
</BorderPane>
