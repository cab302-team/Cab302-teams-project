<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane fx:id="root" stylesheets="@level-styles.css, @common-styles.css"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.LevelController">

    <ImageView managed="false" fitWidth="${root.width}" fitHeight="${root.height}">
        <Image url="@backgroundImage.png"/>
    </ImageView>

    <StackPane>
        <BorderPane>
            <left>
                <StackPane fx:id="sidebar"/>
            </left>
        </BorderPane>
        <BorderPane>
            <center>
                <StackPane>
                    <BorderPane>
                        <center>
                            <ImageView translateY="-30" scaleX="0.6" scaleY="0.6" mouseTransparent="true">
                                <Image url="@tileRack.png"/>
                            </ImageView>
                        </center>
                    </BorderPane>
                    <VBox StackPane.alignment="CENTER" alignment="CENTER" spacing="75">
                        <!-- the 2 letter tile horizontal rows. -->
                        <VBox alignment="CENTER" spacing="50">
                            <StackPane>
                                <HBox fx:id="wordWindowContainer" styleClass="rounded-rectangle-no-boarder"
                                      maxWidth="-Infinity" maxHeight="-Infinity" spacing="11">
                                    <padding><Insets topRightBottomLeft="30"/></padding>
                                </HBox>
                            </StackPane>
                            <StackPane>
                                <HBox fx:id="tileRackContainer" alignment="CENTER" spacing="10" fillHeight="false"/>
                            </StackPane>
                        </VBox>
                        <VBox spacing="20" alignment="CENTER">
                            <HBox fillHeight="false" alignment="CENTER" spacing="50">
                                <Button fx:id="playButton" onAction="#onPlayButton" styleClass="default-button" text="play"/>
                                <Button fx:id="redrawButton" onAction="#onRedrawButton"
                                        styleClass="default-button" text="redraw"/>
                            </HBox>
                            <Button onAction="#onSkipButton" text="(Dev only) Skip to shop" styleClass="default-button"/>
                        </VBox>
                    </VBox>
                    <!-- redraw container -->
                    <VBox fx:id="redrawContainer" styleClass="redraw-container" StackPane.alignment="CENTER_RIGHT"
                          maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                          spacing="10.0">
                        <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton" text="Redraw" styleClass="default-button">
                            <VBox.margin> <Insets left="10.0" right="10.0" top="10.0"/> </VBox.margin>
                        </Button>
                        <padding>
                            <Insets bottom="30.0" />
                        </padding>
                    </VBox>
                    <StackPane mouseTransparent="true" translateY="-150">
                        <Label fx:id="levelWonLostText" styleClass="youWonText" text="YOU WON"/>
                    </StackPane>
                </StackPane>
            </center>
            <top>
                <HBox fx:id="upgradeTilesContainer" alignment="CENTER" spacing="10" style="-fx-padding: 20 0 0 0;"/>
            </top>
        </BorderPane>
    </StackPane>
    <!-- definition container -->
    <StackPane fx:id="definitionContainer" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity" styleClass="popup-overlay" translateX="600" StackPane.alignment="CENTER_RIGHT">
        <StackPane.margin>
            <Insets left="-1000.0" />
        </StackPane.margin>
    </StackPane>
</StackPane>