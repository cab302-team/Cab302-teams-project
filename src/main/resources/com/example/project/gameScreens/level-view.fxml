<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane fx:id="root" stylesheets="@level-styles.css, @common-styles.css"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.LevelController">

    <!-- Background -->
    <ImageView managed="false"
               mouseTransparent="true"
               StackPane.alignment="CENTER"
               fitWidth="${root.width}"
               fitHeight="${root.height}">
        <Image url="@backgroundImage.png"/>
    </ImageView>

    <StackPane>
        <BorderPane>
            <left>
                <StackPane fx:id="sidebar"/>
            </left>
        </BorderPane>
        <BorderPane>
            <center>
                <StackPane>
                    <VBox StackPane.alignment="CENTER" alignment="CENTER" spacing="50">
                        <StackPane maxHeight="100" translateY="100">
                            <!-- word window image -->
                            <ImageView mouseTransparent="true"
                                       preserveRatio="true"
                                       scaleX="0.9"
                                       scaleY="0.9" StackPane.alignment="CENTER">
                                <Image url="@wordWindow.PNG"/>
                            </ImageView>
                            <HBox fx:id="wordWindowContainer" alignment="CENTER" fillHeight="false" spacing="11"/>
                        </StackPane>
                        <StackPane StackPane.alignment="CENTER" maxHeight="100">
                            <!-- Tile Rack Image -->
                            <ImageView mouseTransparent="true"
                                       translateY ="-20"
                                       preserveRatio="true"
                                       scaleX="0.6"
                                       scaleY="0.6">
                                <Image url="@tileRack.png"/>
                            </ImageView>
                            <HBox alignment="CENTER" StackPane.alignment="CENTER" fx:id="tileRackContainer" spacing="10"/>
                        </StackPane>
                        <HBox alignment="CENTER" spacing="50">
                            <Button fx:id="playButton" onAction="#onPlayButton" styleClass="default-button" text="play"/>
                            <Button fx:id="redrawButton" onAction="#onRedrawButton"
                                    styleClass="default-button" text="redraw"/>
                        </HBox>
                        <Button onAction="#onSkipButton" text="(Dev only) Skip to shop" styleClass="default-button"/>
                    </VBox>

                    <!-- redraw container -->
                    <VBox fx:id="redrawContainer" styleClass="redraw-container" StackPane.alignment="CENTER_RIGHT"
                          maxHeight="-Infinity" maxWidth="-Infinity"
                          minHeight="-Infinity" minWidth="-Infinity"
                          spacing="10.0">
                        <StackPane.margin>
                            <Insets bottom="50.0" right="20.0" />
                        </StackPane.margin>
                        <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton" text="Confirm Redraw" styleClass="default-button">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </Button>
                        <!-- redraw slots added here. -->
                        <padding>
                            <Insets bottom="30.0" />
                        </padding>
                    </VBox>
                    <StackPane mouseTransparent="true" translateY="-150">
                        <Label fx:id="levelWonLostText" styleClass="youWonText" text="YOU WON"/>
                    </StackPane>
                </StackPane>
            </center>
            <top>
                <HBox fx:id="upgradeTilesContainer" alignment="CENTER" spacing="10" style="-fx-padding: 20 0 0 0;"/>
            </top>
        </BorderPane>
    </StackPane>
    <!-- definition container -->
    <StackPane fx:id="definitionContainer" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity" styleClass="popup-overlay" translateX="600" StackPane.alignment="CENTER_RIGHT">
        <StackPane.margin>
            <Insets left="-1000.0" />
        </StackPane.margin>
    </StackPane>
</StackPane>