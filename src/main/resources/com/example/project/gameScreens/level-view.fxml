<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" stylesheets="@level-styles.css, @common-styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controllers.gameScreens.LevelController">

    <!-- Background -->
    <ImageView fitHeight="${root.height}" fitWidth="${root.width}" managed="false" mouseTransparent="true" StackPane.alignment="CENTER">
        <Image url="@backgroundImage.png" />
    </ImageView>

    <!-- word window Rack Image -->
    <ImageView mouseTransparent="true" preserveRatio="true" scaleX="0.9" scaleY="0.9" translateY="-65" StackPane.alignment="CENTER">
        <Image url="@wordWindow.PNG" />
    </ImageView>

    <!-- Tile Rack Image -->
    <ImageView mouseTransparent="true" preserveRatio="true" scaleX="0.6" scaleY="0.6" translateY="55" StackPane.alignment="CENTER">
        <Image url="@tileRack.png" />
    </ImageView>

    <BorderPane prefHeight="400.0" prefWidth="600.0">

        <!-- center components of the screen -->
        <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <VBox alignment="CENTER" spacing="50">

                    <!-- word window -->
                    <HBox fx:id="wordWindowContainer" alignment="CENTER" fillHeight="false" spacing="10.6">
                        <VBox.margin>
                            <Insets top="155.0" />
                        </VBox.margin>
                    </HBox>

                    <!-- tile rack -->
                    <HBox fx:id="tileRackContainer" alignment="CENTER" fillHeight="false" spacing="15">
                        <VBox.margin>
                            <Insets top="40.0" />
                        </VBox.margin>
                    </HBox>

                    <!-- container for plays and redraws buttons -->
                    <HBox alignment="CENTER" spacing="50">
                                <Button fx:id="playButton" onAction="#onPlayButton" styleClass="default-button" />
                                <Button fx:id="redrawButton" onAction="#onRedrawButton" styleClass="default-button" />
                    </HBox>

                    <!-- dev skip to shop button -->
                    <Button onAction="#onSkipButton" text="(Dev only) Skip to shop">
                        <VBox.margin>
                            <Insets top="-20" />
                        </VBox.margin>
                    </Button>
                </VBox>

                <!-- redraw window -->
                <VBox fx:id="redrawContainer" alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" styleClass="redraw-container" translateX="200.0" StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets top="20.0" right="20.0" />
                    </StackPane.margin>
                    <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton" styleClass="default-button" text="Confirm Redraw">
                        <VBox.margin>
                            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                        </VBox.margin>
                    </Button>
               <padding>
                  <Insets bottom="25.0" top="10.0" />
               </padding>
                </VBox>

            </StackPane>
        </center>
    </BorderPane>

    <!-- upgrade tiles -->
    <VBox alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;" maxHeight="75" StackPane.alignment="TOP_CENTER">
        <HBox fx:id="upgradeTilesContainer" alignment="CENTER" minHeight="75" spacing="10" />
    </VBox>

    <!-- definition popup -->
    <StackPane fx:id="definitionContainer" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity" styleClass="popup-overlay" translateX="600" StackPane.alignment="CENTER_RIGHT">
        <StackPane.margin>
            <Insets left="-1000.0" />
        </StackPane.margin>
    </StackPane>

    <!-- level outcome popup -->
    <Label fx:id="levelWonLostText" minHeight="150" styleClass="levelOutcome" wrapText="false">
    </Label>

    <!-- sidebar -->
    <StackPane>
        <BorderPane>
            <left>
                <StackPane fx:id="sidebar"/>
            </left>
        </BorderPane>
    </StackPane>

</StackPane>
