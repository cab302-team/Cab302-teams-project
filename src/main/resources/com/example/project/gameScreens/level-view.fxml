<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.controllers.gameScreens.LevelController"
            stylesheets="@level-styles.css">

    <top>
        <StackPane>
            <VBox spacing="5" fillWidth="false">
                <Label fx:id="scoreRequiredText"
                       styleClass="scoreText"
                       style="-fx-padding: 20 0 0 30;"/>
                <Label fx:id="levelPointsText"
                       styleClass="scoreText"
                       style="-fx-padding: 0 0 0 30;"/>
                <Label fx:id="moneyLabel"
                       text="Money: $0"
                       styleClass="scoreText"
                       style="-fx-padding: 0 0 0 30; -fx-text-fill: pink;"/>
            </VBox>
            <VBox style="-fx-padding: 20 0 0 0;">
                <HBox fx:id="upgradeTilesContainer" spacing="10" alignment="CENTER"/>
                <StackPane>
                    <Label textFill="deeppink" fx:id="levelWonLostText" text="YOU WON" styleClass="youWonText"/>
                </StackPane>
            </VBox>
        </StackPane>
    </top>
   <center>
       <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <VBox alignment="CENTER" spacing="50">
               <HBox fx:id="wordViewHBox" alignment="CENTER" fillHeight="false" spacing="10">
               </HBox>
               <HBox fx:id="tileRackContainer" alignment="CENTER" fillHeight="false" spacing="10">
               </HBox>
               <HBox alignment="CENTER" spacing="50">
                   <Button fx:id="playButton" onAction="#onPlayButton" text="Play"/>
                   <Button fx:id="redrawButton" onAction="#onRedrawButton" text="Redraw"/>
               </HBox>
               <Button onAction="#onSkipButton" text="(Dev only) Skip to shop"/>
           </VBox>
           <VBox fx:id="redrawContainer" alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                 minHeight="-Infinity" minWidth="-Infinity" prefHeight="347.0" prefWidth="150.0" spacing="10.0"
                 translateX="200.0" StackPane.alignment="BOTTOM_RIGHT">
               <StackPane.margin>
                   <Insets bottom="50.0" right="20.0"/>
               </StackPane.margin>
               <Button fx:id="confirmRedrawButton" mnemonicParsing="false" onAction="#onConfirmRedrawButton"
                       text="Confirm Redraw"/>
           </VBox>
       </StackPane>
   </center>
</BorderPane>
