<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.MainMenuController" stylesheets="@main-menu-styles.css">
    <VBox fx:id="backgroundContainer" alignment="CENTER">
        <ImageView fx:id="imageBG" managed="false" VBox.vgrow="ALWAYS"/>
    </VBox>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER"><!-- Title -->
        <HBox fx:id="titleRow" alignment="CENTER" fillHeight="false" spacing="10" style="-fx-padding: 20 0 0 0;">
      <VBox.margin>
          <Insets/>
      </VBox.margin>
        </HBox>

        <!-- Menu Window -->
        <VBox alignment="CENTER" fillWidth="false">
            <VBox alignment="CENTER" fillWidth="false" spacing="20.0" styleClass="menu-container" StackPane.alignment="CENTER">

                <!-- Main Menu heading -->
                <Label text="Main Menu" textFill="#9e1124">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>

                <!-- start button -->
                <Button onAction="#onStartButtonClick" prefWidth="200.0" styleClass="menu-buttons" text="Start" textFill="WHITE" VBox.vgrow="NEVER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>

                <!-- logout button -->
                <Button onAction="#onLogoutButtonClick" prefWidth="200.0" styleClass="menu-buttons" text="Logout" textFill="WHITE" VBox.vgrow="NEVER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="40.0"/>
                    </VBox.margin>
                </Button>


                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>

                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </VBox>
     <VBox.margin>
         <Insets top="50.0"/>
     </VBox.margin>
        </VBox>
    </VBox>

</StackPane>
