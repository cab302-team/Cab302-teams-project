<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root"
           xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/17.0.12"
           fx:controller="com.example.project.controllers.gameScreens.DailyRewardController"
           stylesheets="@dailyReward-styles.css">

    <ImageView managed="false" fitWidth="${root.width}" fitHeight="${root.height}">
        <Image url="@grassBackground.jpg"/>
    </ImageView>

    <!-- Spinner Content Area -->
    <StackPane>

        <BorderPane>
            <center>
                <VBox alignment="CENTER" spacing="40">

                    <!-- Title -->
                    <Label text="Daily Reward!" styleClass="reward-title"/>

                    <!-- Wheel + Stick -->
                    <StackPane>
                        <ImageView fx:id="wheelImage"
                                   fitWidth="280"
                                   fitHeight="280"
                                   preserveRatio="true">
                            <Image url="@spinWheel.png"/>
                        </ImageView>

                        <ImageView fx:id="stickImage"
                                   fitWidth="160"
                                   fitHeight="160"
                                   preserveRatio="true">
                            <Image url="@marstick.png"/>
                        </ImageView>
                    </StackPane>

                    <!-- Spin Button -->
                    <Button fx:id="spinButton"
                            text="SPIN"
                            onAction="#onSpinButtonClicked"
                            styleClass="green-spin-button"/>

                    <!-- Result Text -->
                    <Label fx:id="rewardResultLabel"
                           wrapText="true"
                           maxWidth="300"
                           styleClass="reward-result"/>
                </VBox>
            </center>
        </BorderPane>
    </StackPane>

    <!-- Confetti Layer -->
    <Pane fx:id="confettiLayer"
          mouseTransparent="true"
          pickOnBounds="false"/>
</StackPane>