<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.LoginController" stylesheets="@login-styles.css, @common-styles.css">
    <VBox fx:id="backgroundContainer" alignment="CENTER">
        <ImageView fx:id="imageBG" managed="false" VBox.vgrow="ALWAYS"/>
    </VBox>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER">

        <!-- Title -->
        <HBox fx:id="titleRow" alignment="CENTER" fillHeight="false" spacing="10" style="-fx-padding: 20 0 0 0;">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>

        <!-- Login Window -->
        <VBox alignment="CENTER" fillWidth="false">
            <VBox alignment="CENTER" fillWidth="false" spacing="20.0" styleClass="menu-container" StackPane.alignment="CENTER">

                <!-- login window heading -->
                <Label text="Login or Create an Account" styleClass="heading-text">
                </Label>

                <!-- username field -->
                <HBox alignment="CENTER" VBox.vgrow="NEVER">
                    <TextField fx:id="usernameTextField" promptText="username" styleClass="text-fields"/>
                    <VBox.margin>
                        <Insets left="40.0" right="40.0"/>
                    </VBox.margin>
                </HBox>

                <!-- password field -->
                <HBox alignment="CENTER" VBox.vgrow="NEVER">
                    <PasswordField fx:id="passwordTextField" promptText="password" styleClass="text-fields"/>
                </HBox>

                <!-- login/sign up reaction text -->
                <Label fx:id="infoText" styleClass="reaction-text">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>

                <!-- login button -->
                <Button onAction="#onLoginButtonClick" prefWidth="200.0" styleClass="menu-buttons" text="Login" VBox.vgrow="NEVER">
                </Button>

                <!-- sign up button -->
                <Button onAction="#onSignupButtonClick" prefWidth="200.0" styleClass="menu-buttons" text="Sign Up" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets bottom="40.0"/>
                    </VBox.margin>
                </Button>

                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>

                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </VBox>
     <VBox.margin>
         <Insets top="50.0"/>
     </VBox.margin>
        </VBox>
    </VBox>

</StackPane>
