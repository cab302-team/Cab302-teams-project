<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.image.*?>


<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.ShopController"
           stylesheets="@shop-styles.css, @common-styles.css">

    <!-- Background -->
    <ImageView managed="false"
               mouseTransparent="true"
               StackPane.alignment="CENTER"
               fitWidth="${root.width}"
               fitHeight="${root.height}">
        <Image url="@backgroundImage.png"/>
    </ImageView>

    <StackPane>
        <BorderPane>
            <left>
                <StackPane fx:id="sidebar"/>
            </left>
        </BorderPane>
    </StackPane>

    <!-- Foreground Shop UI -->
    <BorderPane prefHeight="400.0" prefWidth="600.0">
    <top>
        <StackPane>
            <BorderPane>
                <center>
                    <HBox spacing="10" fx:id="playersUpgradesContainer" alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;"/>
                </center>
            </BorderPane>
        </StackPane>
    </top>

        <center>
            <VBox spacing="10" alignment="CENTER">
                <StackPane>
                    <StackPane styleClass="rounded-rectangle-no-boarder" style="-fx-background-color: brown;" translateY="-100" maxHeight="150" maxWidth="400">
                        <Label text="Buy an upgrade!" styleClass="large-text"/>
                    </StackPane>
                </StackPane>
                <HBox spacing="10" fx:id="shopItemsContainer"
                      alignment="CENTER" fillHeight="false"
                      maxWidth="300" maxHeight="150" minHeight="150"
                      style="-fx-background-color: brown; -fx-background-radius: 20;"/>
                <Button onAction="#onNextLevelPressed" styleClass="default-button" text="to next level"/>
            </VBox>
        </center>
    </BorderPane>
</StackPane>