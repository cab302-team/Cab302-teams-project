<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<StackPane prefHeight="400.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.project.controllers.gameScreens.ShopViewController"
           stylesheets="@shop-styles.css">

    <VBox alignment="TOP_CENTER">
        <Label text="Shop" styleClass="shop-heading"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <HBox spacing="10" fx:id="shopItemsRow" alignment="CENTER" fillHeight="false" maxWidth="300" maxHeight="150" minHeight="150" style="-fx-background-color: brown; -fx-background-radius: 20;">
        </HBox>
        <Button onAction="#onNextLevelPressed" text="to next level"/>
    </VBox>

</StackPane>
