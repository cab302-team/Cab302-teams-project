<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.shape.Rectangle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="400"
            fx:controller="com.example.project.controllers.gameScreens.LevelController"
            stylesheets="@level-style.css">

    <top>
        <VBox>
            <StackPane>
                <Label text="Level Screen" styleClass="heading"
                       textAlignment="CENTER" alignment="CENTER"/>
            </StackPane>
            <HBox fx:id="upgradeTileRackAtTop" alignment="CENTER" spacing="10" fillHeight="false">
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="20">
            <HBox fx:id="wordViewHBox" alignment="CENTER" spacing="10" fillHeight="false">
            </HBox>
            <HBox fx:id="tileRackContainer" alignment="CENTER" spacing="10" fillHeight="false">
            </HBox>
        </VBox>
    </center>
</BorderPane>
