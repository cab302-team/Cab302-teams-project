<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.Controllers.LevelController"
            prefWidth="800" prefHeight="600">

    <top>
        <HBox spacing="20" alignment="CENTER">
            <Label text="Level Screen"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="30" alignment="CENTER">

            <!-- Word Window -->
            <HBox fx:id="wordWindow" spacing="10" alignment="CENTER">
                <!-- Tiles selected from the rack will appear here -->
            </HBox>

            <!-- Tile Rack -->
            <HBox fx:id="tileRack" spacing="10" alignment="CENTER">
                <Button text="A" styleClass="tile-button"/>
                <Button text="B"/>
                <Button text="C"/>
                <Button text="D"/>
                <Button text="E"/>
                <Button text="F"/>
                <Button text="G"/>
                <Button text="H"/>
                <Button text="I"/>
            </HBox>

            <!-- Control Buttons -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="playWordButton" text="Play Word" styleClass="control-button"/>
                <Button fx:id="redrawButton" text="Redraw"/>
            </HBox>

            <!-- Info Labels -->
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="scoreLabel" text="Score: 0" styleClass="score-label"/>
                <Label fx:id="playsLeftLabel" text="Plays Left: 4"/>
                <Label fx:id="redrawsLeftLabel" text="Redraws Left: 2"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>