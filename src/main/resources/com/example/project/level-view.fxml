<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800" stylesheets="@Level-view.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.Controllers.LevelController">

    <top>
        <HBox alignment="CENTER" spacing="20">
            <Label text="Level Screen" />
        </HBox>
    </top>
    <left>
        <AnchorPane prefHeight="550.0" prefWidth="972.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="579.0" fitWidth="1036.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@woodBackground.PNG" />
                    </image>
                </ImageView>
                <VBox alignment="CENTER" layoutX="217.0" layoutY="105.0" prefHeight="374.0" prefWidth="473.0" spacing="30">

                    <!-- Word Window -->
                    <HBox fx:id="wordWindow" alignment="CENTER" spacing="10">
                        <!-- Tiles selected from the rack will appear here -->
                    </HBox>

                    <HBox alignment="CENTER" spacing="20">
                        <Button fx:id="sd" styleClass="control-button" text="44" />
                        <Button fx:id="sds" text="55" />
                    </HBox>

                    <!-- Tile Rack -->
                    <HBox fx:id="tileRack" alignment="CENTER" spacing="10">
                        <Button styleClass="tile-button" text="A" />
                        <Button text="B" />
                        <Button text="C" />
                        <Button text="D" />
                        <Button text="E" />
                        <Button text="F" />
                        <Button text="G" />
                        <Button text="H" />
                        <Button text="I" />
                    </HBox>

                    <!-- Control Buttons -->
                    <HBox alignment="CENTER" spacing="20">
                        <Button fx:id="playWordButton" styleClass="control-button" text="Play Word" />
                        <Button fx:id="redrawButton" text="Redraw" />
                    </HBox>

                    <!-- Info Labels -->
                    <HBox alignment="CENTER" spacing="30">
                        <Label fx:id="scoreLabel" styleClass="score-label" text="Score: 0" />
                        <Label fx:id="playsLeftLabel" text="Plays Left: 4" />
                        <Label fx:id="redrawsLeftLabel" text="Redraws Left: 2" />
                    </HBox>

                </VBox>
            </children>
        </AnchorPane>
    </left>

</BorderPane>
